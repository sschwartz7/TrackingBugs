@model BTUser
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout2";
}

<!-- Loader -->
<div id="global-loader">
    <img src="~/assets/img/loader.svg" class="loader-img" alt="Loader">
</div>
<!-- End Loader -->
<!-- Main Header-->
<div class="main-header side-header">
    <div class="main-container container-fluid">
        <div class="main-header-left">
            <a class="main-header-menu-icon" href="javascript:void(0)"
               id="mainSidebarToggle"><span></span></a>
            <div class="hor-logo" style="width: 50px">
                <a class="main-logo" href="index.html">
                    <img src="~/img/Bright Sight Script (1).png" class="header-brand-img desktop-logo" alt="logo">
                    <img src="~/img/Bright Sight Script (1).png" class="header-brand-img desktop-logo-dark"
                         alt="logo">
                </a>
            </div>
        </div>
        <div class="main-header-center">
            <div class="responsive-logo" style="width: 50px">
                <a href="index.html"><img src="~/img/Bright Sight Script (1).png" class="mobile-logo height:" alt="logo"></a>
                <a href="index.html">
                    <img src="~/img/Bright Sight Script (1).png" class="mobile-logo-dark"
                         alt="logo">
                </a>
            </div>
        </div>
        <div class="main-header-right">
            <button class="navbar-toggler navresponsive-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent-4" aria-controls="navbarSupportedContent-4"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="fe fe-more-vertical header-icons navbar-toggler-icon"></i>
            </button><!-- Navresponsive closed -->
            <div class="navbar navbar-expand-lg  nav nav-item  navbar-nav-right responsive-navbar navbar-dark  ">
                <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
                    <div class="d-flex order-lg-2 ms-auto">
                        <!-- SEARCH -->
                        <div class="header-nav-right p-3">
                            ''
                            <a href="signup.html" class="btn ripple btn-min w-sm btn-primary me-2"
                               target="_blank">
                                Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Main Header-->

<div class="landing-top-header overflow-hidden">
    <div class="top sticky">
        <!--APP-SIDEBAR-->
        <div class="app-sidebar__overlay" data-bs-toggle="sidebar"></div>
        <div class="app-sidebar bg-transparent">
            <div class="container">
                <div class="row">
                    <div class="main-sidemenu navbar px-0">
                        <a class="main-logo" href="index.html" style="width: 150px">
                            <img src="~/img/Bright Sight Script.png" class="header-brand-img desktop-logo"
                                 alt="logo">
                            <img src="~/img/Bright Sight Script.png"
                                 class="header-brand-img desktop-logo-dark" alt="logo">
                        </a>
                        <div class="slide-left disabled" id="slide-left">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="#7b8191" width="24" height="24"
                                 viewBox="0 0 24 24">
                                <path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z" />
                            </svg>
                        </div>
                        <ul class="side-menu">
                            <li class="slide">
                                <a class="side-menu__item" data-bs-toggle="slide" href="#Features">
                                    <span class="side-menu__label">Features</span>
                                </a>
                            </li>'
                            <li class="slide">
                                <a class="side-menu__item" data-bs-toggle="slide" href="#Contact">
                                    <span class="side-menu__label">Contact</span>
                                </a>
                            </li>
                        </ul>
                        <div class="slide-right" id="slide-right">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 fill="#7b8191" width="24" height="24" viewBox="0 0 24 24">
                                <path d="M10.707 17.707 16.414 12l-5.707-5.707-1.414 1.414L13.586 12l-4.293 4.293z" />
                            </svg>
                        </div>
                        <div class="header-nav-right d-none d-lg-block">

                            <a class="btn ripple btn-min w-sm btn-danger me-2" asp-area="Identity" asp-page="/Account/Register">Register</a>


                            <a class="btn ripple btn-min w-sm btn-info me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/APP-SIDEBAR-->
    </div>
    <div class="demo-screen-headline main-demo main-demo-1 spacing-top overflow-hidden reveal" id="home">
        <div class="container px-sm-0">
            <div class="row">
                <div class="col-xl-6 col-lg-6 animation-zidex pos-relative">
                    <h4 class="fw-semibold mt-7">Track Your Projects</h4>
                    <h1 class="text-start fw-bold">With Tracker you can keep orginized!</h1>
                    <h6 class="pb-3">
                        Tracker is a full featured bug tracker for your companies productivity needs.
                    </h6>
                    <a asp-action="Dashboard" asp-controller="Home"
                       class="btn ripple btn-min w-lg mb-3 me-2 btn-light">
                        <i class="fe fe-play me-2"></i> Get Started
                    </a>
                </div>
                <div class="col-xl-6 col-lg-6 my-auto">
                    <img src="~/img/Bright Sight Script.png" alt="Tracker Logo">
                </div>
            </div>
        </div>
    </div>
</div>

<!--app-content open-->
<div class="main-content mt-0">
    <div class="side-app">

        <!-- ROW-2 OPEN -->
        <div class="sptb section bg-white" id="Features">
            <div class="container">
                <div class="row">
                    <h4 class="text-center fw-semibold landing-card-header">Features</h4>
                    <span class="landing-title"></span>
                    <h2 class="fw-semibold text-center">Tracker Main Features</h2>
                    <div class="row mt-7">
                        <div class="col-lg-3 col-md-12">
                            <div class="card features main-features main-features-1 wow fadeInUp reveal revealleft"
                                 data-wow-delay="0.1s">
                                <div class="card-body">
                                    <div class="counter-body-2">
                                        <div class="bg-img mb-2 text-left hexagon-wrapper">
                                            <div class="counter-icon hexagon">
                                                <i class="fe fe-package text-white"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-left counter-body">
                                        <h4 class="fw-bold">Multiple Projects</h4>
                                        <p class="mb-0">
                                            Track multiple projects at the same time, with multiple tickets for each project.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-12">
                            <div class="card features main-features main-features-2 wow fadeInUp reveal revealleft"
                                 data-wow-delay="0.1s">
                                <div class="card-body">
                                    <div class="counter-body-2">
                                        <div class="bg-img mb-2 text-left hexagon-wrapper">
                                            <div class="counter-icon hexagon">
                                                <i class="fe fe-code text-white"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-left counter-body">
                                        <h4 class="fw-bold">Unified Design</h4>
                                        <p class="mb-0">
                                            Well put together coheisive design.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-12">
                            <div class="card features main-features main-features-3 wow fadeInUp reveal revealleft"
                                 data-wow-delay="0.1s">
                                <div class="card-body">
                                    <div class="counter-body-2">
                                        <div class="bg-img mb-2 text-left hexagon-wrapper">
                                            <div class="counter-icon hexagon">
                                                <i class="fe fe-layers text-white"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-left counter-body">
                                        <h4 class="fw-bold">Notifications</h4>
                                        <p class="mb-0">
                                            Notifications are provided both in app and through email
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-12">
                            <div class="card features main-features main-features-4 wow fadeInUp reveal revealleft"
                                 data-wow-delay="0.1s">
                                <div class="card-body">
                                    <div class="counter-body-2">
                                        <div class="bg-img mb-2 text-left hexagon-wrapper">
                                            <div class="counter-icon hexagon">
                                                <i class="fe fe-book-open text-white"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-left counter-body">
                                        <h4 class="fw-bold">Text Editor</h4>
                                        <p class="mb-0">
                                            Rich text editor powered by summernote, so your descriptions can go as in depth as you can imagine.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- ROW-10 OPEN -->
        <div class="section pb-0" id="Contact">
            <div class="container">
                <div class="">
                    <div class="card reveal p-5 mb-0 ">
                        <h4 class="text-center fw-semibold mt-7 landing-card-header ">Contact</h4>
                        <span class="landing-title"></span>
                        <h2 class="text-center fw-semibold mb-0 px-2">Reach out!</h2>
                        <div class="card-body text-dark">
                            <div class="statistics-info">
                                <div class="row justify-content-center">
                                    <div class="col-xl-12">
                                        <div class="row">
                                            <form method="post" asp-action="ContactMe" class="contact-form--1 row">
                                                <div class="col-md-6">
                                                    <label asp-for="FirstName" class="form-label p-2">First Name</label>
                                                    <input asp-for="FirstName" type="text" class="form-control"
                                                           placeholder="First Name" aria-label="First Name" required />
                                                </div>
                                                <div class="col-md-6">
                                                    <label asp-for="LastName" class="form-label p-2">Last Name</label>
                                                    <input asp-for="LastName" type="text" class="form-control"
                                                           placeholder="Last Name" aria-label="Last Name" required />
                                                </div>
                                                <div class="col-12">
                                                    <label asp-for="Email" class="form-label p-2">Email</label>
                                                    <input asp-for="Email" type="text" class="form-control"
                                                           placeholder="Email" aria-label="Email" required />
                                                </div>
                                                <div class="col-12">
                                                    <div class="ql-wrapper ql-wrapper-demo mb-3">
                                                        <label for="contact-message" class="control-label"></label>
                                                        <textarea name="message" id="summernote"></textarea>
                                                    </div>

                                                </div>
                                                <div class="col-12 ">
                                                    <div class="form-submit">
                                                        <button type="submit" class="axil-button button-rounded btn-primary" style="width:75px">Submit</button>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ROW-10 CLOSED -->

        <div class="demo-screen-skin bg-primary">
            <div class="container text-center text-white px-5 px-md-0">
                <div id="demo" class="row">
                </div>
            </div>
        </div>
    </div>
</div>
<!--app-content closed-->
<div class="pos-relative">
    <div class="shape overflow-hidden bottom-footer-shape">
        <svg viewBox="0 0 2880 48" fill="none" xmsns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="#0e0e23"></path>
        </svg>
    </div>
</div>
<!-- FOOTER OPEN -->
<div class="demo-footer">
    <div class="container">
        <div class="row">
            <div class="card mb-0">
                <div class="card-body p-0">
                    <div class="top-footer">
                    </div>
                    <hr class="mb-0">
                    <footer class="main-footer px-0 text-center">
                        <div class="row ">
                            <div class="col-md-12 col-sm-12">
                                Copyright © <span id="year"></span> <a href="javascript:void(0)">Tracker</a>.
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- FOOTER CLOSED -->
<!-- BACK-TO-TOP -->
<a href="#top" id="back-to-top"><i class="fa fa-angle-up"></i></a>

@section Scripts{
    <script>
        $('#summernote').summernote({
            placeholder: 'Message Me',
            tabsize: 3,
            height: 300
        });
    </script>
}