@model BTUser
@inject IBTRoleService _RoleService
@inject IBTFileService _BTFileService


<div class="col-sm-12 col-md-6 col-lg-6 col-xl-3">
	<div class="card custom-card border">
		<div class="card-body text-center">
			<div class="user-lock text-center">
                @if (User.IsInRole("Admin")){
				<div class="dropdown text-end">
                        <a asp-for="ManageUserRoles" class="option-dots" aria-haspopup="true" aria-expanded="true"> <i class="fe fe-more-vertical"></i> </a>
				</div>
                }
				<img src="@_BTFileService.ConvertByteArrayToFile(Model?.ImageFileData, Model?.ImageFileType, DefaultImage.BTUserImage)" alt="Author Images" style="height:40px;width:40px">
			</div>
			<p><h5 class=" mb-1 mt-3 main-content-label">@Model.FullName</h5></p>
			<p class="mb-2 mt-1 tx-inverse"></p>
				<p class="text-muted text-center mt-1">@(string.Join(", ", await _RoleService.GetUserRolesAsync(Model)))</p>
		</div>
	</div>
</div>
