@using Microsoft.AspNetCore.Identity;
@model IEnumerable<TrackingBugs.Models.Notification>
@inject UserManager<BTUser> UserManager
@inject IBTNotificationService BTNotificationService

@{
    BTUser? appUser = await UserManager.GetUserAsync(User);
    ViewData["Title"] = "Index";
}
<!-- Main Content-->
<div class="main-content pt-0">

    <div class="main-container container-fluid">
        <div class="inner-body">

                        <!-- Page Header -->
                        <div class="page-header">
                            <div>
                                <h2 class="main-content-title tx-24 mg-b-5">Notifications</h2>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item active"><a href="#">Notifications</a></li>
                                </ol>
                            </div>
                        </div>
                        <!-- End Page Header -->

            <div class="row square">
                <div class="col-lg-12 col-md-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div class="panel profile-cover">
                                <div class="profile-cover__img">
                                    <img src="~/assets/img/users/1.jpg" alt="img" />
                                    <h3 class="h3">@appUser.FullName</h3>
                                </div>
                                <div class="profile-cover__action bg-img"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Row -->
            <div class="row row-sm">
                <div class="col-lg-12 col-md-12">
                    <div class="card custom-card main-content-body-profile">
                        <div class="tab-content">
                            <div class="main-content-body tab-pane p-4 border-top-0 active" id="all">
                                <div class="card-body p-0 rounded-10">
                                    <div class="p-4">
                                        <table class="table" id="notificationTable">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Title)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Message)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Created)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Ticket)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Sender)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Recipient)
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Message)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Created)
                                                        </td>
                                                        <td>
                                                            @if(item.NotificationType!.Name == nameof(BTNotificationType.Project)){
                                                                @item.Project!.Name
                                                            }else{
                                                                @item.Ticket!.Title
                                                            }
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Sender!.FullName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Recipient!.FullName)
                                                        </td>
                                                        <td>
                                                            @if (item.NotificationType!.Name == nameof(BTNotificationType.Project))
                                                            {
                                                                <a asp-action="Details" asp-route-id="@item.Project!.Id" asp-controller="Projects" class="btn btn-primary ripple btn-block">Details</a>
                                                            }
                                                            else
                                                            {
                                                                <a asp-action="Details" asp-route-id="@item.Ticket!.Id" asp-controller="Tickets" class="btn btn-primary ripple btn-block">Details</a>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Row -->
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $('#notificationTable').DataTable({
            responsive: true,
            language: {
                searchPlaceholder: 'Search...',
                sSearch: '',
                lengthMenu: '_MENU_ items/page',
            }
        });
    </script>
}